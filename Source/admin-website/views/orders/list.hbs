
<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    {{>nav-bars}}

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">{{pageTitle}}</li>
            </ol>


            <!-- Page Content -->

            <!-- Popup customer info -->
            <div id="customerModal" class="modal fade" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h1 class="modal-title"><span class="fa fa-pencil-square-o" aria-hidden="true" style="color: black;"></span></h1>
                        </div>
                        <div class="modal-body">
                            <div class="row content">
                                <div class="col-sm-12">
                                    <div class="panel panel-success">
                                        <div class="panel-heading" style="font-size: 25px;font-weight: bold; background-color: black;color: white"><span class="fas fa-user-alt" aria-hidden="true" style="color: white;"></span> Thông tin khách hàng</div>
                                        <div class="panel-body">
                                            <div class="row">
                                                <table class="table table-striped table-bordered table-list" id="ta1">
                                                    <thead>
                                                    <tr>
                                                        <th>Họ tên</th>
                                                        <th>Địa chỉ</th>
                                                        <th>Số điện thoại</th>
                                                        <th>Email</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    <tr>
                                                        <td id="name"></td>
                                                        <td id="address"></td>
                                                        <td id="sdt"></td>
                                                        <td id="email"></td>
                                                    </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Đóng</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Popup product list-->
            <div id="productModal" class="modal fade" role="dialog">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h1 class="modal-title"><span class="fa fa-pencil-square-o" aria-hidden="true" style="color: black;"></span></h1>
                        </div>
                        <div class="modal-body">
                            <div class="row content">
                                <div class="col-sm-12">
                                    <div class="panel panel-success">
                                        <div class="panel-heading" style="font-size: 25px;font-weight: bold; background-color: black;color: white"><span class="fas fa-dolly" aria-hidden="true" style="color: white;"></span> Thông tin danh sách sản phẩm</div>
                                        <div class="panel-body">
                                            <div class="row">
                                                <table class="table table-striped table-bordered table-list" id="ta1">
                                                    <thead>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Tên sản phẩm</th>
                                                        <th>Đơn giá</th>
                                                        <th>Số lượng</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Đóng</button>
                        </div>
                    </div>
                </div>
            </div>

            <div id="updateModal" class="modal fade" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h1 class="modal-title"><span class="fa fa-pencil-square-o" aria-hidden="true" style="color: black;"></span></h1>
                        </div>
                        <div class="modal-body">
                            <div class="row content">
                                <div class="col-sm-12">
                                    <div class="panel panel-success">
                                        <div class="panel-heading" style="font-size: 25px;font-weight: bold; background-color: black;color: white"><span class="fas fa-shopping-cart" aria-hidden="true" style="color: white;"></span> Cập nhật đơn hàng</div>
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="form-group col-sm-12">
                                                    <label>Mã đơn hàng</label>
                                                    <input id="idOrder" class="form-control" type="text" value="" readonly="true">
                                                </div>
                                                <div class="form-group col-sm-12">
                                                    <label>Tên khách hàng</label>
                                                    <input id="customerName" class="form-control" type="text" value="Lưu Tuấn Nguyên" readonly="true">
                                                </div>
                                                <form class="form-horizontal col-sm-12">
                                                    <div class="form-group">
                                                        <label for="totalPrice">Thành tiền</label>
                                                        <input id="totalPrice" class="form-control" type="number">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="created">Ngày tạo</label>
                                                        <input id="created" class="form-control" type="date">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="payment">Hình thức thanh toán</label>
                                                        <select class="form-control" id="payment">
                                                            <option value="Credit card">Credit card</option>
                                                            <option value="Ship COD">Ship COD</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="status">Trạng thái</label>
                                                        <select class="form-control" id="status">
                                                            <option value="Chưa giao">Chưa giao</option>
                                                            <option value="Đang giao">Đang giao</option>
                                                            <option value="Đã giao">Đã giao</option>
                                                        </select>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary" data-dismiss="modal">Cập nhật</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Editable table -->
            <div class="row content">
                <div class="panel-body">
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="list" style="height: 300px;overflow: auto;">
                            <table class="table table-striped table-bordered table-list" id="ta1">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Thông tin khách hàng</th>
                                    <th>Hình thức thanh toán</th>
                                    <th>Thành tiền</th>
                                    <th>Ngày tạo</th>
                                    <th>Danh sách sản phẩm</th>
                                    <th>Trạng thái</th>
                                    <th>Chức năng</th>
                                </tr>
                                </thead>
                                <tbody id="body-order">
                                {{#each orderList}}
                                    <tr>
                                        <td id="idOrder{{@index}}">{{this._id}}</td>
                                        <td><button id="customerButton{{@index}}" value="{{@index}}" data-toggle="modal" data-target="#customerModal" class="btn-primary btn">Xem chi tiết</button></td>
                                        <td>{{this.payment}}</td>
                                        <td>{{formatCurrency this.totalPrice}}</td>
                                        <td>{{formatDate this.created}}</td>
                                        <td><button id="productButton{{@index}}" value="{{@index}}" data-toggle="modal" data-target="#productModal" class="btn-primary btn">Xem chi tiết</button></td>
                                        <td>{{this.status}}</td>
                                        <td>
                                            <a href="orders/update/{{this._id}}"> <i class="fa fa-pen fa-lg" aria-hidden="=true"></i> </a>
                                            <a href="orders/delete/{{this._id}}" onclick="return confirm ('Bạn có chắc chắn muốn xóa ?');" > <i class="fa fa-trash fa-lg" aria-hidden="=true"></i></a>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

            <!-- Editable table -->
            <!-- /.container-fluid -->

            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2019</span>
                    </div>
                </div>
            </footer>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
{{>logout}}

{{> js}}

<script src="js/ajax-modal.js"></script>