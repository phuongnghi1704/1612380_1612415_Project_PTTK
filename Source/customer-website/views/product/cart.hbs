<div class="container">
    {{#if cartProducts}}
        <table id="cart" class="table table-hover table-condensed">
            <thead>
            <tr>
                <th style="width:50%">Sản phẩm</th>
                <th style="width:10%">Đơn giá</th>
                <th style="width:8%">Số lượng</th>
                <th style="width:22%" class="text-center">Thành tiền</th>
                <th style="width:10%"></th>
            </tr>
            </thead>
            <tbody>
            {{#each cartProducts}}
                <tr>
                    <td data-th="Product">
                        <div class="row">
                            <div class="col-sm-2 hidden-xs"><img src="{{this.item.img1}}" class="img-responsive"/></div>
                            <div class="col-sm-10">
                                <h4 class="nomargin">{{this.item.name}}</h4>
                            </div>
                        </div>
                    </td>
                    <td data-th="Price">{{formatCurrency this.item.price}}</td>
                    <td data-th="Quantity">{{this.qty}}</td>
                    <td data-th="Subtotal" class="text-center">{{formatCurrency this.price}}</td>
                    <td class="actions" data-th="">
                        <a href="cart/add/{{this.item._id}}" class="btn btn-info btn-sm"><i class="fa fa-plus"></i></a>
                        <a href="cart/reduce/{{this.item._id}}" class="btn btn-info btn-sm"><i class="fa fa-minus"></i></a>
                        <a href="cart/remove/{{this.item._id}}" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
            <tfoot>
            <tr>
                <td><a href="/" class="btn btn-warning"><i class="fa fa-angle-left"></i>&nbsp;Tiếp tục mua sắm</a></td>
                <td colspan="2" class="hidden-xs"></td>
                <td class="hidden-xs text-center"><strong>Tổng tiền&nbsp;{{formatCurrency cartTotalPrice}}</strong></td>
                <td>
                    <a href="/checkout" class="btn btn-success btn-block">Thanh toán với Credit Card&nbsp;<i class="fa fa-angle-right"></i></a>
                    <a href="/checkoutCOD" class="btn btn-primary btn-block">Thanh toán COD&nbsp;<i class="fa fa-angle-right"></i></a>
                </td>
            </tr>
            </tfoot>
        </table>
    {{else}}
        <img src="img/emptycart.png">
    {{/if}}

</div>

